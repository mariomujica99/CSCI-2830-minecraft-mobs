<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.FlowPane?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mobs.ListPageController" spacing="10">
    <HBox alignment="CENTER" spacing="50">
        <ComboBox fx:id="filterComboBox"
                  onAction="#handleFilterSelection"
                  promptText="Filter by dimension..."
                  style="-fx-font-family: 'Minecrafter';
                         -fx-font-size: 16px;
                         -fx-background-color: #F0F0F0;
                         -fx-border-radius: 8;
                         -fx-padding: 5 10;
                         -fx-cursor: hand;"/>
        <Label text="Minecraft Mobs" style="-fx-font-family: 'Minecrafter'; -fx-font-size: 16px; -fx-text-fill: gray;"/>
        <ComboBox fx:id="sortComboBox"
                  onAction="#handleSortSelection"
                  promptText="Sort by..."
                  style="-fx-font-family: 'Minecrafter';
                         -fx-font-size: 16px;
                         -fx-background-color: #F0F0F0;
                         -fx-border-radius: 8;
                         -fx-padding: 5 10;
                         -fx-cursor: hand;"/>
    </HBox>
    <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
        <content>
            <FlowPane fx:id="mobListContainer" hgap="10" vgap="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </FlowPane>
        </content>
    </ScrollPane>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>