<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mobs.HomepageController"
      style="-fx-background-image: url('https://images2.alphacoders.com/135/1353836.png');
             -fx-background-size: contain;
             -fx-background-repeat: no-repeat;
             -fx-background-position: center center;">
   <children>
      <Label text="Minecraft Mobs" style="-fx-font-family: 'Minecrafter'; -fx-font-size: 75px; -fx-text-fill: white;"/>
      <Button fx:id="viewMobsButton"
        text="View Mobs"
        onAction="#goToListPage"
        style="-fx-background-color: #2196F3;
               -fx-text-fill: white;
               -fx-font-size: 18px;
               -fx-font-weight: bold;
               -fx-background-radius: 8;
               -fx-padding: 10 20;
               -fx-min-width: 150px;
               -fx-min-height: 40px;
               -fx-cursor: hand;"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>
</VBox>
